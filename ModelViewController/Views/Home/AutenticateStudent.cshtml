@model Common.User
@{ ViewData["Title"] = "StudentIndex"; }

@{
    Layout = "_StudentLayout";
    string src = "~/Arquivos_Usuario/" + Model.Role + "/" + Model.ID + ".jpg";

}
<div class="card">
    <img class="card-img-top w-100 profile-bg-height" src="../assets/images/background/profile-bg.jpg" alt="Card image cap">
    <div class="card-body little-profile text-center">
        <div class="pro-img"><img src="@Url.Content(src)" alt="user" class="rounded-circle shadow-sm" width="128"></div>
        <h3 class="mb-0"> @Html.DisplayFor(Model=>Model.Name)</h3>
        <p>Web Designer &amp; Developer</p>
        <a href="javascript:void(0)" class="mt-2 waves-effect waves-dark btn btn-primary btn-md btn-rounded">Follow</a>
        <div class="row text-center mt-3 justify-content-center">
            <div class="col-6 col-md-4 mt-3">
                <h3 class="mb-0 font-weight-light"> @Html.DisplayFor(Model => Model.Name)</h3><small>Articles</small>
            </div>
            <div class="col-6 col-md-4 mt-3">
                <h3 class="mb-0 font-weight-light"> @Html.DisplayFor(Model => Model.Role)</h3><small>Followers</small>
            </div>
            <div class="col-6 col-md-4 mt-3">
                <h3 class="mb-0 font-weight-light">6035</h3><small>Following</small>
            </div>
        </div>
    </div>
</div>

